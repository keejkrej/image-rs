{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "image-ui",
  "version": "0.1.0",
  "identifier": "com.image.rs",
  "build": {
    "beforeDevCommand": "bun run --cwd web dev --host 127.0.0.1 --port 1420 || bun run --cwd ../web dev --host 127.0.0.1 --port 1420 || bun run --cwd src/image-rs/ui/web dev --host 127.0.0.1 --port 1420",
    "beforeBuildCommand": "bun run --cwd web build || bun run --cwd ../web build || bun run --cwd src/image-rs/ui/web build",
    "devUrl": "http://127.0.0.1:1420",
    "frontendDist": "web/dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "label": "main",
        "title": "image-rs Control",
        "url": "index.html?window=launcher",
        "width": 460,
        "height": 420,
        "minWidth": 400,
        "minHeight": 320,
        "center": true,
        "resizable": true
      },
      {
        "label": "viewer-template",
        "title": "image-rs Viewer",
        "url": "index.html?window=viewer",
        "width": 1200,
        "height": 860,
        "resizable": true,
        "create": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "icon": [
      "icons/icon.ico",
      "icons/icon.png"
    ]
  }
}
